{
  "manifest_version": 3,
  "name": "Lead Gen Tool Hub",
  "version": "1.3",
  "description": "A hub with tools for time zone conversion, script customization, and callback notes.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://hooks.zapier.com/*",
    "https://script.google.com/macros/*",
    "https://script.googleusercontent.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self' https://script.google.com/macros/ https://hooks.zapier.com https://script.googleusercontent.com"
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/icon16.png"
  }
}
